@page
@model LogoutModel
@{
    ViewData["Title"] = "Вихід";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        System.Diagnostics.Debug.Assert(User.Identity != null, "User.Identity != null");
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Нажміть, щоб вийти</button>
            </form>
        }
        else
        {
            <p>Ви успішно вийшли із системи.</p>
        }
    }
</header>
