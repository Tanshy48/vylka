@{
    ViewData["Title"] = "Товари";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")" rel="stylesheet" asp-append-version="true"/>
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" asp-append-version="true"/>
}
<div class="render-content">
	<div class="wrapper">
		<ul class="sidebar navbar-nav">
				<li class="side-nav-title d-flex">
					<div class="d-flex align-items-center">
						<button class="btn text-white" id="sidebarToggle">
							<img src="~/images/admin/sidebarToggle.png" alt="Card image cap">
						</button>
						<h1 class="text-white">Навігація</h1>
					</div>
				</li>
				<li class="nav-item border-bottom">
					<a class="nav-link d-flex justify-content-between" asp-area="" asp-controller="Admin" asp-action="Users">
						<div class="d-flex align-items-center">
							<img src="~/images/admin/users.png" alt="Card image cap">
							<span>Користувачі</span>
						</div>
						<span class="arrow fw-semibold float-end">></span>
					</a>
				</li>
				<li class="nav-item border-bottom">
					<a class="nav-link d-flex justify-content-between" asp-area="" asp-controller="Admin" asp-action="Products">
						<div class="d-flex align-items-center">
							<img src="~/images/admin/products.png" alt="Card image cap">
							<span>Товари</span>
						</div>
						<span class="arrow fw-semibold float-end">></span>
					</a>
				</li>
				<li class="nav-item border-bottom">
					<a class="nav-link d-flex justify-content-between" asp-area="" asp-controller="Admin" asp-action="Orders">
						<div class="d-flex align-items-center">
							<img src="~/images/admin/orders.png" alt="Card image cap">
							<span>Замовлення</span>
						</div>
						<span class="arrow fw-semibold float-end">></span>
					</a>
				</li>
				<li class="nav-item border-bottom">
					<a class="nav-link d-flex justify-content-between" asp-area="" asp-controller="Admin" asp-action="Categories">
						<div class="d-flex align-items-center">
							<img src="~/images/admin/categories.png" alt="Card image cap">
							<span>Категорії товарів</span>
						</div>
						<span class="arrow fw-semibold float-end">></span>
					</a>
				</li>
			</ul>
		<div class="content-wrapper">
			<div class="border-top border-primary border-4 bg-light table-responsive">
				<div class="bg-table-title text-dark d-flex justify-content-between align-items-center">
					<h1 class=" fw-bolder fs-5 p-lg-3 ">Товари</h1>
					<button class="btn btn-success">
                            <i class="fa-sharp fa-solid fa-file-circle-plus"></i>
                            <span>Додати товар</span>
                    </button>
				</div>
				<table class="text-center table table-striped">
					<thead class="fs-6">
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Назва</th>
							<th scope="col">Опис</th>
							<th scope="col">Наявність</th>
							<th scope="col">Зображення</th>
							<th scope="col">Змінити</th>
							<th scope="col">Видалити</th>
						</tr>
					</thead>
					<tbody> 
						<tr>
							<th scope="row">1</th>
							<td>Холодильник LG</td>
							<td>Опис холодильника</td>
							<td>+</td>
							<td>-</td>
							<td>
								<button class="btn btn-primary">
									<i class="fa fa-pen"></i>
								</button>
							</td>
							<td>
								<button class="btn btn-danger">
									<i class="fa fa-trash"></i>
								</button>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/admin.js")" asp-append-version="true"></script>
}