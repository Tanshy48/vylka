@using vylka.Areas.Entity
@model Category
@{
    ViewData["Title"] = "Видалити категорію";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" asp-append-version="true"/>
}

<div class="render-content">
    <div class="content-wrapper">
        <div class="border-top border-primary border-4 bg-light table-responsive">
            <div class="bg-table-title text-dark d-flex justify-content-between align-items-center">
                <h1 class="fw-bolder fs-5 p-lg-3 ">Видалення категорії</h1>
            </div>
            <form class="text-dark" method="post" asp-controller="CategoryAdmin" asp-action="DeleteCategoryPost">
                <input asp-for="Id" hidden/>
                <div class="mb-3 mt-3">
                    <h5 class="mb-2">Ви впевнені що хочете видалити цю категорію?</h5>
                    <label asp-for="Name" class="form-label">Категорія</label>
                    <input type="text" asp-for="Name" disabled class="form-control">
                </div>
                <div class="mb-3 form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="delCheckBox">
                    <label class="form-check-label">Так, я свідомо видаляю цю категорію</label>
                </div>
                <div>
                    <button disabled id="sendFormBtn" class="btn btn-danger" type="submit">
                        Підтвердити
                    </button>
                    <a class="btn text-dark" asp-controller="CategoryAdmin" asp-action="Categories">
                        Скасувати
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/admin.js")" asp-append-version="true"></script>
}