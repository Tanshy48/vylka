@{
    ViewData["Title"] = "Видалити товар";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")" rel="stylesheet" asp-append-version="true"/>
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" asp-append-version="true"/>
}
<div class="render-content">
		<div class="content-wrapper">
			<div class="border-top border-primary border-4 bg-light table-responsive">
				<div class="bg-table-title text-dark d-flex justify-content-between align-items-center">
					<h1 class="fw-bolder fs-5 p-lg-3 ">Видалення товару</h1>
				</div>
				<form class="text-dark">
                    <div class="mb-3 mt-3">
                        <h5>Ви впевненні, що хочете видалити товар?</h5>
                    </div>
                    <div class="mb-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Так, я свідомо видаляю цей товар</label>
                    </div>
                    <div>
                        <button class="btn btn-danger" type="submit" asp-area="Admin" asp-controller="ProductAdmin" asp-action="Products">
                            Підтвердити
                        </button>
                        <a class="btn text-dark" asp-area="Admin" asp-controller="ProductAdmin" asp-action="Products">
                            Скасувати
                        </a>
                    </div>
                </form>
			</div>
		</div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/admin.js")" asp-append-version="true"></script>
}