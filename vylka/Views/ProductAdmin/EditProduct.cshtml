@using vylka.Areas.Entity
@model Product
@{
    ViewData["Title"] = "Змінити товар";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")" rel="stylesheet" asp-append-version="true"/>
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" asp-append-version="true"/>
}
<div class="render-content">
		<div class="content-wrapper">
			<div class="border-top border-primary border-4 bg-light table-responsive">
				<div class="bg-table-title text-dark d-flex justify-content-between align-items-center">
					<h1 class="fw-bolder fs-5 p-lg-3 ">Редагування товару</h1>
				</div>
                <form class="text-dark" method="post" asp-controller="ProductAdmin" asp-action="EditProductPOST">
                    <input asp-for="Id" hidden />
                    <div class="mb-3">
                         <label asp-for="ProductName" class="form-label">Назва товару</label>
                        <input type="text" asp-for="ProductName" class="form-control">
                    </div>
                    <div class="mb-3">
                         <label asp-for="Description" class="form-label">Опис</label>
                        <input type="text" asp-for="Description" class="form-control">
                    </div>
                    <div class="mb-3">
                         <label asp-for="Price" class="form-label">Ціна</label>
                        <input type="number" asp-for="Price" class="form-control">
                    </div>
                    <div class="mb-3">
                         <label asp-for="CategoryId" class="form-label">ID категорії</label>
                        <input type="number" asp-for="CategoryId" class="form-control">
                    </div>
                    <div>
                        <button class="btn btn-success" type="submit" >
                            Зберегти
                        </button>
                        <a class="btn text-dark" asp-area="Admin" asp-controller="ProductAdmin" asp-action="Products">
                            Назад
                        </a>
                    </div>
                </form>
			</div>
		</div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/admin.js")" asp-append-version="true"></script>
}