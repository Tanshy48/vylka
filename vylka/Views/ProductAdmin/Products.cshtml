@using vylka.Areas.Entity
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Товари";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/lib/fontawesome-free/css/all.min.css")" rel="stylesheet" asp-append-version="true"/>
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" asp-append-version="true"/>
}
<div class="render-content">
		<div class="content-wrapper">
			<div class="border-top border-primary border-4 bg-light table-responsive">
				<div class="bg-table-title text-dark d-flex justify-content-between align-items-center">
					<h1 class=" fw-bolder fs-5 p-lg-3 ">Товари</h1>
					<a asp-controller="ProductAdmin" asp-action="AddProduct">
						<button class="btn btn-success">
							<i class="fa-sharp fa-solid fa-file-circle-plus"></i>
							<span>Додати товар</span>
						</button>
					</a>
				</div>
				<table class="text-center table table-striped">
					<thead class="fs-6">
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Назва</th>
							<th scope="col">Опис</th>
							<th scope="col">Ціна</th>
							<th scope="col">Id категорії</th>
							<th scope="col">Змінити</th>
							<th scope="col">Видалити</th>
						</tr>
					</thead>
					<tbody> 
						@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.ProductName</td>
									<td>@item.Description</td>
									<td>@item.Price</td>
									<td>@item.CategoryId</td>
									<td>
										<a asp-controller="ProductAdmin" asp-action="EditProduct" asp-route-id="@item.Id">
											<button class="btn btn-primary">
												<i class="fa fa-pen"></i>
											</button>
										</a>
									</td>
									<td>
										<a asp-controller="ProductAdmin" asp-action="DeleteProduct" asp-route-id="@item.Id">
											<button class="btn btn-danger">
												<i class="fa fa-trash"></i>
											</button>
										</a>
									</td>
								</tr>
							}	
					</tbody>
				</table>
			</div>
		</div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/admin.js")" asp-append-version="true"></script>
}