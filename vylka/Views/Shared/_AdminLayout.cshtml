<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - VYLKA</title>
		<link rel="icon" type="image/x-icon" href="~/images/favicon/favicon.png">
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
        @RenderSection("CSS", required: false)
	</head>
	<body> 
        <!-- Navbar -->
        <partial name="_NavBar" />

		<main role="main">
            <div class="wrapper">
				<ul class="sidebar navbar-nav">
					<li class="side-nav-title d-flex">
						<div class="d-flex align-items-center">
							<button class="btn text-white" id="sidebarToggle">
								<img src="~/images/admin/sidebarToggle.png" alt="Card image cap">
							</button>
							<h1 class="text-white">Навігація</h1>
						</div>
					</li>
					<li class="nav-item border-bottom">
						<a class="nav-link d-flex justify-content-between"  asp-controller="UserAdmin" asp-action="Users">
							<div class="d-flex align-items-center">
								<img src="~/images/admin/users.png" alt="Card image cap">
								<span>Користувачі</span>
							</div>
							<span class="arrow fw-semibold float-end">></span>
						</a>
					</li>
					<li class="nav-item border-bottom">
						<a class="nav-link d-flex justify-content-between"  asp-controller="ProductAdmin" asp-action="Products">
							<div class="d-flex align-items-center">
								<img src="~/images/admin/products.png" alt="Card image cap">
								<span>Товари</span>
							</div>
							<span class="arrow fw-semibold float-end">></span>
						</a>
					</li>
					<li class="nav-item border-bottom">
						<a class="nav-link d-flex justify-content-between"  asp-controller="OrderAdmin" asp-action="Orders">
							<div class="d-flex align-items-center">
								<img src="~/images/admin/orders.png" alt="Card image cap">
								<span>Замовлення</span>
							</div>
							<span class="arrow fw-semibold float-end">></span>
						</a>
					</li>
					<li class="nav-item border-bottom">
						<a class="nav-link d-flex justify-content-between"  asp-controller="CategoryAdmin" asp-action="Categories">
							<div class="d-flex align-items-center">
								<img src="~/images/admin/categories.png" alt="Card image cap">
								<span>Категорії товарів</span>
							</div>
							<span class="arrow fw-semibold float-end">></span>
						</a>
					</li>
					<li class="nav-item border-bottom">
						<a class="nav-link d-flex justify-content-between" asp-controller="RoleAdmin" asp-action="Roles">
							<div class="d-flex align-items-center">
								<img src="~/images/admin/roles.png" alt="Card image cap">
								<span>Ролі</span>
							</div>
							<span class="arrow fw-semibold float-end">></span>
						</a>
                    </li> 
				</ul>

				@RenderBody()

            </div>
        </main>
	</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script> 
@RenderSection("Scripts", required: false)