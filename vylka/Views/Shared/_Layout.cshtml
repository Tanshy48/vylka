<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - VYLKA</title>
		<link rel="icon" type="image/x-icon" href="~/images/favicon/favicon.png">
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        @RenderSection("CSS", required: false)
	</head>
	<body> 
        <!-- Navbar -->
        <partial name="_NavBar" />

		<main role="main"> @RenderBody() </main>

		<!-- Footer -->
		<footer class="text-center text-muted">
			<section>
				<div class="text-white container text-center text-md-start pb-5">
				<div class="row">
					<h6 class="text-uppercase fw-bold mt-5 mb-4">VYLKA</h6>
					<div class="col-md-3 col-lg-4 col-xl-3 mx-auto">
						<h7>Тобі потрібна допомога?</h7>
						<p><a asp-controller="Home" asp-action="ProductReturn">Обмін та повернення товару</a></p>
						<p><a asp-controller="Home" asp-action="Delivery">Доставка</a></p>
					</div>
					<div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
						<h7>Контакти</h7>
						<p>+380 (068) 202 60 66</p>
						<p>VYLKASTORE@GMAIL.COM</p>
					</div>
				</div>
				</div>
			</section>
		</footer>
	</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script> 
@RenderSection("Scripts", required: false)