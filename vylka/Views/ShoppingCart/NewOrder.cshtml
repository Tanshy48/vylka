@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ShippingDetailModel
@{
    ViewData["Title"] = "Оформлення замовлення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CSS {
    <link href="@Url.Content("~/css/cart.css")" rel="stylesheet" asp-append-version="true"/>
}
<div class="render-content">
    <div class="d-flex justify-content-center align-items-center">
        <form method="post" asp-controller="ShoppingCart" asp-action="NewOrder">
            <div class="mt-5 form-row d-flex justify-content-between">
                <div class="form-group col-md-6">
                    <label class="form-label">Область</label>
                    <select class="form-control" asp-for="District" id="districtSelect">
                        <option selected>Виберіть...</option>
                    </select>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label class="form-label">Місто</label>
                    <input type="text" asp-for="City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-2 form-group">
                <label class="form-label">Адреса</label>
                <input type="text" asp-for="Address" class="form-control" placeholder="Вулиця, номер будинку"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mt-2 form-group">
                <label class="form-label">Доставка</label>
                <select class="form-control" asp-for="DeliveryType" id="deliverySelect">
                    <option selected>Виберіть...</option>
                </select>
                <span asp-validation-for="DeliveryType" class="text-danger"></span>
            </div>
            <button class="mt-4 btn btn-primary submit" type="submit">Підтвердити замовлення</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/districts.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/deliveries.js")" asp-append-version="true"></script>
    @{
        <partial name="_ValidationScriptsPartial.cshtml"/>
    }
}